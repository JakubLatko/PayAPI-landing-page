---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import NewsletterForm from "../components/NewsletterForm.astro";
import heroImage from "../../public/assets/home/desktop/phone-illustration.png";
import Button from "../components/Button.astro";
import Tesla from "@assets/shared/desktop/tesla-light.svg";
import Microsoft from "@assets/shared/desktop/microsoft-light.svg";
import HP from "@assets/shared/desktop/hewlett-packard-light.svg";
import Oracle from "@assets/shared/desktop/oracle-light.svg";
import Google from "@assets/shared/desktop/google-light.svg";
import nvidia from "@assets/shared/desktop/nvidia-light.svg";
import majorPerk1 from "@assets/home/desktop/easy-to-implement.png";
import majorPerk2 from "@assets/home/desktop/simple-ui.png";
import minorPerk1 from "@assets/home/desktop/icon-personal-finances.svg";
import minorPerk2 from "@assets/home/desktop/icon-banking-and-coverage.svg";
import minorPerk3 from "@assets/home/desktop/icon-consumer-payments.svg";
---

<Layout title="PayAPI - Home">
	<section class="hero">
		<div class="hero__content">
			<h1>Start building with our APIs for absolutely free.</h1>
			<NewsletterForm visible={false} />
			<div>
				<p>Have any questions?</p>
				<a href="/contact">Contact Us</a>
			</div>
		</div>
		<div class="hero__image">
			<Image src={heroImage} alt="" />
		</div>
	</section>
	<section class="partners">
		<div class="partners__text">
			<h2>Who we work with</h2>
			<p>
				Today, millions of people around the world have successfully
				connected their accounts to apps they love using our API. We
				provide developers with the tools they need to create easy and
				accessible experiences for their users.
			</p>
			<a href="/about"
				><Button variant="secondary-dark" buttonType="button">
					About Us
				</Button></a
			>
		</div>
		<div class="partners__imageWrapper">
			<Image src={Tesla} alt={"Tesla's logo"} />
			<Image src={Microsoft} alt={"Microsoft's logo"} />
			<Image src={HP} alt={"HP's logo"} />
			<Image src={Oracle} alt={"Oracle's logo"} />
			<Image src={Google} alt={"Google's logo"} />
			<Image src={nvidia} alt={"nvidia's logo"} />
		</div>
	</section>
	<section class="majorPerks">
		<div class="majorPerk">
			<div class="majorPerk__image">
				<Image
					src={majorPerk1}
					alt={""}
					densities={[1.5, 2]}
					quality={"high"}
				/>
			</div>
			<div class="majorPerk__text">
				<h2>Easy to implement</h2>
				<p>
					Our API comes with just a few lines of code. You’ll be up
					and running in no time. We built our documentation page to
					integrate payments functionality with ease.
				</p>
			</div>
		</div>
		<div class="majorPerk">
			<div class="majorPerk__image">
				<Image src={majorPerk2} alt={""} />
			</div>
			<div class="majorPerk__text">
				<h2>Simple UI & UX</h2>
				<p>
					Our pre-built form is easy to integrate in your app or
					website’s checkout flow and designed to optimize conversion.
				</p>
			</div>
		</div>
	</section>
	<section class="minorPerks">
		<div class="minorPerk">
			<div class="minorPerk__image">
				<Image src={minorPerk1} alt={""} />
			</div>
			<div class="minorPerk__text">
				<h3>Personal Finances</h3>
				<p>
					Consolidate financial data from multiple sources and
					categorize transactions up to 2 years of history. Analyze
					reports to reconcile activities in your account.
				</p>
			</div>
		</div>
		<div class="minorPerk">
			<div class="minorPerk__image">
				<Image src={minorPerk2} alt={""} />
			</div>
			<div class="minorPerk__text">
				<h3>Banking & Coverage</h3>
				<p>
					With our platform, you can speed up account onboarding and
					support ongoing payments for checking, savings, credit card,
					and brokerage accounts.
				</p>
			</div>
		</div>
		<div class="minorPerk">
			<div class="minorPerk__image">
				<Image src={minorPerk3} alt={""} />
			</div>
			<div class="minorPerk__text">
				<h3>Consumer Payments</h3>
				<p>
					It’s easier to set up secure bank payments with us through a
					flow designed with the user experience in mind. Customers
					could instantly authenticate their account.
				</p>
			</div>
		</div>
	</section>
</Layout>

<style lang="scss">
	body {
		background-image: url(/assets/shared/desktop/bg-pattern-circle.svg);
		background-size: 200%;
		background-position: center -25%;
		background-repeat: no-repeat;
	}
	.hero,
	.partners,
	.majorPerks,
	.minorPerks {
		padding-inline: 1.5rem;
	}
	.hero {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		justify-content: center;
		padding-block-end: 5rem;
		gap: 1.5rem;
		&__content {
			display: flex;
			flex-direction: column;
			justify-content: center;
			gap: 1.5rem;
			text-align: center;
			h1 {
				font-family: var(--ff-heading);
				color: var(--primary-200);
				font-weight: var(--fw-400);
				font-size: clamp(2rem, 10vw, 2.5rem);
				letter-spacing: -1px;
			}
			div {
				width: 100%;
				margin-inline: auto;
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 0.5ch;
				p {
					color: var(--primary-100);
				}
				a {
					color: var(--primary-100);
					font-weight: var(--fw-700);
					text-decoration: none;
				}
			}
		}
		&__image {
			img {
				width: fit-content;
				max-width: 40vw;
				height: fit-content;
				object-fit: contain;
			}
		}
	}

	.partners {
		background-color: var(--primary-300);
		color: var(--accent-100);
		display: flex;
		flex-direction: column-reverse;
		padding-block: 5rem;
		gap: 3rem;
		background-image: url(/assets/shared/desktop/bg-pattern-circle.svg);
		background-size: 200%;
		background-position: center -150vw;
		background-repeat: no-repeat;
		&__text {
			text-align: center;
			h2 {
				font-size: clamp(2rem, 10vw, 3rem);
				margin-bottom: 1.5rem;
			}
			p {
				font-size: clamp(0.75rem, 3.5vw, 1.5rem);
				margin-bottom: 3rem;
				color: var(--accent-100);
				letter-spacing: 2px;
				line-height: 150%;
				font-weight: 100;
				font-family: var(--ff-body);
				opacity: 0.8;
			}
		}
		&__imageWrapper {
			display: grid;
			grid-template-columns: 1fr 1fr;
			grid-template-rows: repeat(3, 1fr);
			place-items: center;
			gap: 3rem;
		}
	}

	.majorPerks {
		display: flex;
		flex-direction: column;
		gap: 5rem;
		padding-block: 5rem;
		.majorPerk {
			&__image {
				width: fit-content;
				height: fit-content;
				margin-bottom: 3rem;
				img {
					width: fit-content;
					height: fit-content;
					object-fit: contain;
				}
			}
			&__text {
				text-align: center;
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				h2 {
					color: var(--primary-200);
					font-size: clamp(2rem, 10vw, 2.5rem);
				}
				p {
					color: var(--primary-100);
					font-size: clamp(0.75rem, 4vw, 1.5rem);
				}
			}
		}
	}

	.minorPerks {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		//padding-block: 0 5rem;
		justify-content: center;
		align-items: center;
		.minorPerk {
			&__image {
				width: fit-content;
				height: fit-content;
				margin-bottom: 2.5rem;
				margin-inline: auto;
				img {
					width: fit-content;
					height: fit-content;
					object-fit: contain;
				}
			}
			&__text {
				text-align: center;
				display: flex;
				flex-direction: column;
				gap: 1rem;
				h3 {
					color: var(--primary-200);
					font-size: clamp(0.875rem, 5vw, 1.75rem);
					font-weight: var(--fw-700);
					font-family: var(--ff-body);
				}
				p {
					color: var(--primary-100);
					font-size: clamp(0.75rem, 4vw, 1.5rem);
				}
			}
		}
	}
	@media only screen and (min-width: 768px) {
		body {
			background-size: 120%;
			background-position: center -15%;
		}
		.hero,
		.partners,
		.majorPerks {
			padding-inline: 10vw;
		}
		.minorPerks {
			padding-inline: 2rem;
		}
		.hero {
			&__content {
				h1 {
					max-width: 20ch;
					margin-inline: auto;
					font-size: clamp(2.5rem, 6vw, 3.5rem);
				}
				div {
					a,
					p {
						font-size: clamp(0.875rem, 2vw, 1.5rem);
					}
				}
			}
			&__image {
				img {
					margin-inline: auto;
					width: 25vw;
				}
			}
		}
		.partners {
			&__imageWrapper {
				grid-template-columns: 1fr 1fr 1fr;
				grid-template-rows: 1fr 1fr;
				place-items: center;
			}
			&__text {
				h2 {
					font-size: clamp(2.5rem, 6vw, 3.5rem);
				}
				p {
					font-size: clamp(0.875rem, 2vw, 1.5rem);
					max-width: 60ch;
					margin-inline: auto;
					line-height: 180%;
				}
			}
		}
		.majorPerks {
			.majorPerk {
				&__image {
					margin-inline: auto;
					img {
						max-width: 50vw;
					}
				}
				&__text {
					h2 {
						font-size: clamp(2.5rem, 6vw, 3.5rem);
					}
					p {
						font-size: clamp(0.875rem, 2vw, 1.5rem);
						max-width: 60ch;
						margin-inline: auto;
						line-height: 180%;
					}
				}
			}
		}
		.minorPerks {
			flex-direction: row;
			.minorPerk {
				&__text {
					h3 {
						font-size: clamp(1rem, 2.5vw, 1.5rem);
					}
					p {
						font-size: clamp(0.875rem, 1.85vw, 1.5rem);
						max-width: 30ch;
						margin-inline: auto;
						line-height: 180%;
					}
				}
			}
		}
	}
</style>
