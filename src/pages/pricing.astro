---
import Button from "src/components/Button.astro";
import Layout from "src/layouts/Layout.astro";
---

<Layout title="PayAPI | Pricing">
	<main>
		<h1>Pricing</h1>
		<div class="plansWrapper">
			<section>
				<div class="text">
					<h3>Free Plan</h3>
					<p>
						Build and test using our core set of products with up to
						100 API requests
					</p>

					<h2>$0.00</h2>
				</div>

				<ul>
					<li>Transactions</li>
					<li>Auth</li>
					<li>Identity</li>
					<li class="no-marker">Investments</li>
					<li class="no-marker">Assets</li>
					<li class="no-marker">Liabilities</li>
					<li class="no-marker">Income</li>
				</ul>
				<a href="/contact"
					><Button buttonType="button" variant="secondary-light">
						Request Access
					</Button></a
				>
			</section>
			<section>
				<div class="text">
					<h3>Basic Plan</h3>
					<p>
						Launch your project with unlimited requests and no
						contractual minimums
					</p>

					<h2>$249.00</h2>
				</div>

				<ul>
					<li>Transactions</li>
					<li>Auth</li>
					<li>Identity</li>
					<li>Investments</li>
					<li>Assets</li>
					<li class="no-marker">Liabilities</li>
					<li class="no-marker">Income</li>
				</ul>
				<a href="/contact"
					><Button buttonType="button" variant="secondary-light">
						Request Access
					</Button></a
				>
			</section>

			<section>
				<div class="text">
					<h3>Premium Plan</h3>
					<p>
						Get tailored solutions, volume pricing, and dedicated
						support for your team
					</p>

					<h2>$499.00</h2>
				</div>

				<ul>
					<li>Transactions</li>
					<li>Auth</li>
					<li>Identity</li>
					<li>Investments</li>
					<li>Assets</li>
					<li>Liabilities</li>
					<li>Income</li>
				</ul>
				<a href="/contact"
					><Button buttonType="button" variant="secondary-light">
						Request Access
					</Button></a
				>
			</section>
		</div>
	</main>
</Layout>

<style lang="scss">
	@use "../sass/_variables.scss" as *;
	body {
		background-image: url(/assets/shared/desktop/bg-pattern-circle.svg);
		background-size: 200vw;
		background-position: 10vw -75vh;
		background-repeat: no-repeat;
	}
	main {
		display: flex;
		flex-direction: column;
		padding-inline: 1.5rem;
	}
	h1 {
		color: var(--primary-200);
		margin-inline: auto;
		font-size: clamp(1.75rem, 8vw, 2.25rem);
		padding-block: 2rem 0;
	}
	section {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-block: 3.5rem;
	}
	.text {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
		h3 {
			color: var(--accent-200);
			font-size: clamp(1.25rem, 7vw, 2rem);
			margin-inline: auto;
		}
		p {
			font-size: clamp(0.875rem, 3.5vw, 1.25rem);
			color: var(--primary-100);
			text-align: center;
		}
		h2 {
			font-size: clamp(3.75rem, 8vw, 4.5rem);
			color: var(--primary-200);
		}
	}
	ul {
		width: 100%;
		border-top: 1px solid var(--accent-150);
		border-bottom: 1px solid var(--accent-150);
		border-color: rgba($primary-100, 0.3);
		padding: 2rem 0 2rem 0;

		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		li {
			margin-left: 30vw;
			padding-inline-start: 1ch;
			font-size: clamp(0.875rem, 4.5vw, 1.25rem);
		}
		li::marker {
			content: url(/assets/pricing/tick.svg);
		}
		.no-marker {
			color: var(--primary-200);
			opacity: 0.7;
			&::marker {
				content: "";
			}
		}
	}

	@media only screen and (min-width: 768px) {
		body {
			background-size: 80vw;
			background-position: 60vw -40vh;
		}
		main {
			padding-inline: 2.5rem;
		}
		.plansWrapper {
			display: flex;
			flex-direction: row;
			justify-content: space-between;
			gap: 0.5rem;
		}
		h1 {
			font-size: clamp(2.75rem, 6vw, 3.5rem);
		}
		ul {
			li {
				margin-left: 3rem;
				font-size: clamp(0.875rem, 2vw, 1.25rem);
				width: fit-content;
			}
		}
		.text {
			h3 {
				font-size: clamp(1.25rem, 3vw, 1.75rem);
			}
			p {
				font-size: clamp(0.875rem, 2vw, 1.25rem);
			}
			h2 {
				font-size: clamp(2.75rem, 6vw, 3.5rem);
			}
		}
	}
	@media only screen and (min-width: 1440px) {
		body {
			background-size: 50vw;
			background-position: 60vw -55vh;
		}
		main {
			padding-inline: 10vw;
		}
		.plansWrapper {
			gap: 2rem;
		}
		h1 {
			margin-inline: 0;
			font-size: clamp(2.75rem, 4vw, 3.5rem);
		}
		section {
			align-items: start;
		}
		.text {
			text-align: left;
			align-items: start;
			h3 {
				font-size: clamp(1.25rem, 2.25vw, 1.75rem);
				margin: 0;
			}
			p {
				font-size: clamp(0.875rem, 1.1vw, 1.25rem);
				margin: 0;
				text-align: left;
			}
			h2 {
				font-size: clamp(2.75rem, 4vw, 3.5rem);
			}
		}
		ul {
			li {
				font-size: clamp(0.875rem, 1.1vw, 1.25rem);
			}
		}
	}
</style>
