---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../sass/index.scss";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PayAPI is something something" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Public+Sans:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<Button variant="secondary-light">Schedule a demo</Button>
		<slot />
		<Footer />
	</body>
	<style is:global>
		:root {
			--primary-50: hsl(207, 58%, 99%);
			--primary-55: #fbfcfe;
			--primary-100: hsl(207, 16%, 50%);
			--primary-200: hsl(207, 33%, 32%);
			--primary-300: hsl(207, 27%, 15%);
			--accent-100: hsl(220, 60%, 99%);
			--accent-200: hsl(337, 48%, 49%);
			--accent-250: hsl(337, 60%, 64%);
			--fw-400: 400;
			--fw-700: 700;
			--ff-heading: "DM Serif Display", serif;
			--ff-body: "Public Sans", sans-serif;
		}

		body {
			font-family: var(--ff-body);
			max-width: 100vw;
		}

		h1,
		h2,
		h3 {
			font-family: var(--ff-heading);
			font-weight: var(--fw-400);
		}
		p {
			font-family: var(--ff-body);
		}

		.fw-700 {
			font-weight: 700;
		}
		.fw-400 {
			font-weight: 400;
		}
	</style>
</html>
