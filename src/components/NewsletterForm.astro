---
import Button from "./Button.astro";
---

<div class="formWrapper">
	<h2>Ready to start?</h2>
	<form autocomplete="off">
		<input
			placeholder="Enter email address"
			type="email"
			name="email"
			id="email"
		/>
		<Button buttonType="submit" variant="primary mobile-menu">
			Schedule a Demo
		</Button>
	</form>
</div>

<style lang="scss">
	.formWrapper {
		margin-inline: 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	h2 {
		color: var(--primary-200);
		font-size: clamp(1.5rem, 8vw, 2.5rem);
	}

	form {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		width: 100%;
		input {
			border-radius: 100vw;
			width: 100%;
			padding: 1rem 1.5rem;
			border: 0;
			box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
			background-color: var(--accent-100);
			z-index: 100;
		}
	}
	@media only screen and (min-width: 768px) {
		.formWrapper {
			justify-content: center;
			align-items: center;
		}
		h2 {
			font-size: clamp(1.5rem, 6vwvw, 2.5rem);
		}
		form {
			flex-direction: row;
			margin-inline: auto;
			width: 70%;
			box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
			background-color: var(--accent-100);
			opacity: 1;
			border-radius: 100vw;
			position: relative;
			&::before {
				content: "";
				position: absolute;
				display: block;
				left: 55%;
				top: 0%;
				bottom: 0;
				width: 5rem;
				//height: 10rem;
				z-index: 20;
				background-color: var(--accent-100);
			}
			input {
				width: fit-content;
				flex-grow: 1;

				z-index: 100;
				box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
				background-color: var(--accent-100);
			}
		}
	}

	@media only screen and (min-width: 1440px) {
		.formWrapper {
			flex-direction: row;
			margin-inline: 10vw;
			justify-content: space-between;
		}
		form {
			width: 50%;
			margin: 0;
			input {
				flex-grow: 1;
			}
		}

		h2 {
			font-size: clamp(2rem, 4vw, 4rem);
		}
	}
</style>
