---
import { Image } from "astro:assets";
import Button from "./Button.astro";
import logo from "../../public/assets/shared/desktop/logo-dark.svg";
---

<section>
	<div class="formWrapper">
		<h2>Ready to start?</h2>
		<form>
			<input
				placeholder="Enter email address"
				type="email"
				name="email"
				id="email"
			/>
			<Button buttonType="submit" variant="primary mobile-menu">
				Schedule a Demo
			</Button>
		</form>
	</div>

	<footer>
		<a class="logo" href="/">
			<Image src={logo} alt={"PayAPI's logo"} />
		</a>
		<nav>
			<ul>
				<li><a href="/pricing">Pricing</a></li>
				<li><a href="/about">About</a></li>
				<li><a href="/contact">Contact</a></li>
			</ul>
		</nav>
		<div class="socialMedia">
			<!-- <Image src={Facebook} alt="Facebook's logo" /> -->
			<!-- <Image src={Twitter} alt="Twitter's logo" /> -->
			<!-- <Image src={Linkedin} alt="LinkedIn's logo" /> -->
			<a href="/"
				><svg
					class="socialMediaIcon"
					width="24"
					height="24"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M22.675 0H1.325C.593 0 0 .593 0 1.325v21.351C0 23.407.593 24 1.325 24H12.82v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116c.73 0 1.323-.593 1.323-1.325V1.325C24 .593 23.407 0 22.675 0z"
						fill="#FBFCFE"
						fill-rule="nonzero"></path></svg
				></a
			><a href="/"
				><svg
					class="socialMediaIcon"
					width="24"
					height="20"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M24 2.557a9.83 9.83 0 01-2.828.775A4.932 4.932 0 0023.337.608a9.864 9.864 0 01-3.127 1.195A4.916 4.916 0 0016.616.248c-3.179 0-5.515 2.966-4.797 6.045A13.978 13.978 0 011.671 1.149a4.93 4.93 0 001.523 6.574 4.903 4.903 0 01-2.229-.616c-.054 2.281 1.581 4.415 3.949 4.89a4.935 4.935 0 01-2.224.084 4.928 4.928 0 004.6 3.419A9.9 9.9 0 010 17.54a13.94 13.94 0 007.548 2.212c9.142 0 14.307-7.721 13.995-14.646A10.025 10.025 0 0024 2.557z"
						fill="#FBFCFE"
						fill-rule="nonzero"></path></svg
				></a
			><a href="/"
				><svg
					class="socialMediaIcon"
					width="24"
					height="24"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M21.6 0H2.4C1.08 0 0 1.08 0 2.4v19.2C0 22.92 1.08 24 2.4 24h19.2c1.32 0 2.4-1.08 2.4-2.4V2.4C24 1.08 22.92 0 21.6 0zM7.2 20.4H3.6V9.6h3.6v10.8zM5.4 7.56c-1.2 0-2.16-.96-2.16-2.16 0-1.2.96-2.16 2.16-2.16 1.2 0 2.16.96 2.16 2.16 0 1.2-.96 2.16-2.16 2.16zm15 12.84h-3.6v-6.36c0-.96-.84-1.8-1.8-1.8-.96 0-1.8.84-1.8 1.8v6.36H9.6V9.6h3.6v1.44c.6-.96 1.92-1.68 3-1.68 2.28 0 4.2 1.92 4.2 4.2v6.84z"
						fill="#FFF"
						fill-rule="nonzero"></path></svg
				></a
			>
		</div>
	</footer>
</section>

<style lang="scss">
	section {
		display: flex;
		flex-direction: column;
		gap: 5rem;
		padding-top: 5rem;
	}

	.formWrapper {
		margin-inline: 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	h2 {
		color: var(--primary-200);
		font-size: clamp(1.5rem, 8vw, 2.5rem);
	}

	form {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
		width: 100%;
		input {
			border-radius: 100vw;
			width: 100%;
			padding: 1rem 1.5rem;
			border: 0;
			box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
			background-color: var(--accent-100);
			z-index: 100;
		}
	}

	footer {
		background-color: var(--primary-300);
		padding-block: 2.5rem 3.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2.5rem;
		background-image: url(../../public/assets/shared/desktop/bg-pattern-circle.svg);
		background-position: center 25vh;
		background-size: 200%;
		background-repeat: no-repeat;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 2rem;
		li {
			a {
				color: var(--primary-50);
				text-decoration: none;
				opacity: 0.7;
				transition: opacity 250ms ease-in-out;
				&:hover {
					opacity: 1;
					cursor: pointer;
				}
			}
		}
	}
	.logo {
		opacity: 1;
	}
	.socialMedia {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		a:hover,
		a:focus {
			.socialMediaIcon {
				path {
					fill: var(--accent-250);
					cursor: pointer;
					transition: 250ms ease-in-out;
				}
			}
		}
	}

	@media only screen and (min-width: 768px) {
		.formWrapper {
			justify-content: center;
			align-items: center;
		}
		h2 {
			font-size: clamp(1.5rem, 6vwvw, 2.5rem);
		}
		form {
			flex-direction: row;
			margin-inline: auto;
			width: 70%;
			box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
			background-color: var(--accent-100);
			opacity: 1;
			border-radius: 100vw;
			position: relative;
			&::before {
				content: "";
				position: absolute;
				display: block;
				left: 55%;
				top: 0%;
				bottom: 0;
				width: 5rem;
				//height: 10rem;
				z-index: 20;
				background-color: var(--accent-100);
			}
			input {
				width: fit-content;
				flex-grow: 1;

				z-index: 100;
				box-shadow: 10px 10px 25px -10px rgba(54, 83, 107, 0.25);
				background-color: var(--accent-100);
			}
		}

		footer {
			display: flex;
			flex-direction: row;
			width: 100%;
			padding-inline: 2.5rem;
			padding-block: 2rem;
			background-position: 120% 20%;
			background-size: 50%;
		}
		ul {
			flex-direction: row;
		}
		.socialMedia {
			margin-left: auto;
		}
	}
	@media only screen and (min-width: 1440px) {
		footer {
			padding-inline: 10vw;
		}
		ul {
			gap: 3rem;
		}
		.socialMedia {
			gap: 2rem;
		}
	}
</style>

<script is:inline>
	const form = document.querySelector("form");
	const input = form.querySelector("input");
	form?.addEventListener("submit", (e) => {
		e.preventDefault();
		input.value = "";
	});
</script>
